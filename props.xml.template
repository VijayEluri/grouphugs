<Bot>
  <GithubHookUrl>domain.tld</GithubHookUrl>
  <GithubHookPort>50505</GithubHookPort>
  <BitLyUser></BitLyUser>
  <BitLyApiKey></BitLyApiKey>
  <ScatsD>
    <Host></Host>
    <Port></Port>
  </ScatsD>
  <Nicks>
    <Nick>botnick1</Nick>
    <Nick>botnick2</Nick>
  </Nicks>
  <Servers>
    <Server>server1</Server>
    <Server>server2</Server>
